extends base

block content
  main
    article
      section.section.product
        .container
          h2.h2.section-title Bestsellers Products
          ul.filter-list
            li
              a(href=`/${brands.name}`)
                button.filter-btn= `${brands.name}`
          ul.product-list
            li.product-item
              .product-card(tabindex='0')
                figure.card-banner
                  img.image-contain(src=`/images/${products.coverImage}` width='312' height='350' loading='lazy' alt=`${products.name}`)
                  .card-badge New
                  ul.card-action-list
                    li.card-action-item
                      button.card-action-btn(aria-labelledby='card-label-1')
                        ion-icon(name='cart-outline')
                      #card-label-1.card-action-tooltip
                        | Add to Cart
                    li.card-action-item
                      button.card-action-btn(aria-labelledby='card-label-2')
                        ion-icon(name='heart-outline')
                      #card-label-2.card-action-tooltip
                        | Add to Whishlist
                    li.card-action-item
                      button.card-action-btn(aria-labelledby='card-label-3')
                        ion-icon(name='eye-outline')
                      #card-label-3.card-action-tooltip
                        | Quick View
                    li.card-action-item
                      button.card-action-btn(aria-labelledby='card-label-4')
                        ion-icon(name='repeat-outline')
                      #card-label-4.card-action-tooltip
                        | Compare
                .card-content
                  .card-cat
                    a.card-cat-link(href='#')= `${products.ProductGender.dataValues.name}`
                  h3.h3.card-title
                    a(href='#')= `${products.name}`
                  data.card-price(value='180.85') $180.85